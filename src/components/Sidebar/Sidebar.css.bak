.app-sidebar {
  width: 230px;
  background: #363d44;
  color: #d1d5db;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  box-shadow: 2px 0 10px rgba(0,0,0,0.13);
  z-index: 110;
  display: flex;
  flex-direction: column;
  scrollbar-width: none; /* Firefox */
  
}
.sidebar-brand {
  padding: 24px 20px 16px 20px;
  display: flex;
  align-items: center;
  gap: 10px;
}
.brand-link {
  display: flex;
  align-items: center;
  gap: 10px;
  text-decoration: none;
}
.brand-image {
  width: 38px;
  height: 38px;
  border-radius: 50%;
  object-fit: cover;
}
.brand-text {
  font-size: 1.4rem;
  font-weight: bold;
}
.sidebar-wrapper {
  flex: 1;
  overflow-y: auto;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE y Edge */
}
.sidebar-wrapper::-webkit-scrollbar {
  display: none; /* Chrome, Safari, Edge */
}
.sidebar-menu {
  margin-top: 12px;
}
.sidebar-menu .nav-item {
  width: 100%;
}
.sidebar-menu .nav-link {
  display: flex;
  align-items: center;
  gap: 12px;
  color: #d1d5db;
  padding: 12px 24px;
  font-size: 1.08rem;
  transition: background 0.15s, color 0.15s;
  border-left: 4px solid transparent;
  text-decoration: none;
  scrollbar-width: none; /* Firefox */
}
.sidebar-menu .nav-link:hover, .sidebar-menu .nav-link.active {
  background: #23272b;
  color: #fff;
  border-left: 4px solid #4caf50;
  scrollbar-width: none; /* Firefox */
}
.sidebar-menu .nav-icon {
  font-size: 1.3rem;
}
.dropdown-hover > .nav-link {
  cursor: pointer;
}
.nav-arrow {
  font-size: 1rem;
  margin-left: 8px;
}
.nav-treeview {
  background: #23272b;
  margin: 0;
  padding-left: 28px;
  border-radius: 0 0 8px 8px;
}
.nav-treeview .nav-link {
  padding: 8px 24px;
  font-size: 1rem;
  color: #b0b3b8;
  border-left: none;
}
.nav-treeview .nav-link:hover, .nav-treeview .nav-link.active {
  color: #fff;
  background: #1976d2;
}

@media (max-width: 900px) {
  .app-sidebar {
    position: fixed;
    left: 0;
    top: 0;
    width: 80vw;
    max-width: 290px;
    height: 100vh;
    z-index: 1000;
    transform: translateX(-100%);
    transition: transform 0.3s;
    box-shadow: 2px 0 10px rgba(0,0,0,0.13);
  }
  .app-sidebar.open {
    transform: translateX(0);
  }
  .sidebar-burger {
    display: block;
  }
}

@media (min-width: 901px) {
  .sidebar-burger {
    display: none !important;
  }
}
